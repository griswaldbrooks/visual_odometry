# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.cpp text diff=cpp
*.h text diff=cpp
*.hpp text diff=cpp
*.c text diff=cpp
*.cc text diff=cpp
*.cxx text diff=cpp

# CMake files
CMakeLists.txt text
*.cmake text

# Documentation
*.md text
*.txt text

# Git LFS - Binary files
# Image data (calibration patterns, test images)
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text

# Video files
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text

# Binary data files
*.bin filter=lfs diff=lfs merge=lfs -text
*.db filter=lfs diff=lfs merge=lfs -text
*.dat filter=lfs diff=lfs merge=lfs -text

# GitHub workflows must be text (not LFS)
.github/**/*.yml text
.github/**/*.yaml text

# Camera calibration files (in data directories only)
data/**/*.yaml filter=lfs diff=lfs merge=lfs -text
data/**/*.yml filter=lfs diff=lfs merge=lfs -text
calibration/**/*.yaml filter=lfs diff=lfs merge=lfs -text
calibration/**/*.yml filter=lfs diff=lfs merge=lfs -text

# Point cloud data
*.pcd filter=lfs diff=lfs merge=lfs -text
*.ply filter=lfs diff=lfs merge=lfs -text

# Archives
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text

# Use bd merge for beads JSONL files
.beads/issues.jsonl merge=beads
